{
  "manifest_version": 3,
  "name": "Veles Multi Backtests",
  "description": "Запуск последовательных бектестов для нескольких валют на veles.finance.",
  "version": "0.1.0",
  "action": {
    "default_title": "Veles Tools",
    "default_popup": "popup.html"
  },
  "permissions": ["storage", "tabs", "scripting"],
  "host_permissions": ["https://veles.finance/*"],
  "background": {
    "service_worker": "scripts/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://veles.finance/*"],
      "js": ["scripts/proxy-bridge.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["scripts/page-fetch-bridge.js"],
      "matches": ["https://veles.finance/*"]
    },
    {
      "resources": [
        "ui/dist/index.html",
        "ui/dist/assets/*"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
